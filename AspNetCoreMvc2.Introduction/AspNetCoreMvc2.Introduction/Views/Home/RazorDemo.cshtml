@model AspNetCoreMvc2.Introduction.EmployeeListViewModel

@{
    var value = 10;
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RazorDemo</title>
</head>
<body>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>City Id</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Employees) // @@ şeklinde @ işaretini razor dışında kullanabiliriz
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.CityId</td>
                </tr>
            }
        </tbody>
    </table>
    I m @@home
    <p>@DateTime.Now</p>

    @{ var date = DateTime.Now - TimeSpan.FromDays(3);}
    <p>3 gün öncesi @date</p>

    @{
        var number = 10;
    }
    <p>@number</p>

    @if (number < 10)
    {
        <p>sayı 10 dan küçük</p>
    }
    else if (number == 10)
    {
        <p>sayınız 10</p>
    }
    else
    {
        <p>sayı 10'dan büyük.</p>
    }

    @switch (value)
    {
        case 10:
            <p>sayınız 10</p>
            break;
        case 11:
            <p>sayınız 10</p>
            break;
        case 12:
            <p>sayınız 10</p>
            break;
        default:
            <p>sayın hakkında fikrim yok</p>
            break;
    }

    FOR
    @for (int i = 0; i < Model.Employees.Count; i++)
    {
        <br /><b>@Model.Employees[i].FirstName</b>
    }

    While
    @{ var counter = 0;}
    @while (counter < Model.Employees.Count)
    {
        <br /><b>@Model.Employees[counter].FirstName</b>
        counter++;
    }

    DO-WHILE
    @{ var counter2 = 0;}
    @do
    {
        <br /><b>@Model.Employees[counter2].FirstName</b>
        counter2++;
    } while (counter2 < Model.Employees.Count);

    @try
    {

    }
    catch (ArgumentNullException argumentNullException)
    {

        throw;
    }
    catch (Exception exception)
    {

        throw;
    }
    finally // her halukarda çalışır, örneğin db kapatma işlemi. 
    {

    }

    @using (Html.BeginForm()) //IDisposable, işi bitince bellektan fırlatır.. ondan kullanıyoz
    {
        // Html.BeginForm() bir form bloğu açar o form üzerinde crud, arama işlemi vb yapılır.
        <input type="text" id="" name="" />
        <button type="submit"></button>
    }
</body>
</html>
